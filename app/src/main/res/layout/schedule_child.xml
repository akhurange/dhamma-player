<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft">

    <ListView
        android:id="@+id/lvMediaFiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_media_button_text"
        android:drawableStart="@android:drawable/ic_input_add"
        android:backgroundTintMode="@android:color/transparent"
        android:focusable="false"
        android:textColor="@color/colorAccent"
        android:id="@+id/btAddMedia" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_button_text"
        android:drawableStart="@android:drawable/ic_menu_delete"
        android:backgroundTintMode="@android:color/transparent"
        android:focusable="false"
        android:textColor="@color/colorAccent"
        android:id="@+id/btDelete"
        android:layout_marginBottom="16dp"/>

</LinearLayout>